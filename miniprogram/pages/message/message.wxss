.weui-cell__hd{
  position: relative;
  bottom: 17px;
  height: 50px;
  width: 50px;
}
.weui-cell__bd{
  top: 20px;
}
.nickName{
  font-size: 13px;
  font-weight: 900;
}
.comment{
  padding-top: 8px;
  font-size: 14px;
  padding-bottom: 10px;
}
.commentTime{
  font-size: 12px;
  color: #9C9C9C;
}
image {
  height: 40px;
  width: 40px;
  border-radius: 50%;
}
.myTalk_cont{
  background:#F4F4F4;
  width: 60px;
  height: 45px;
  padding-left: 8px;
  padding-top: 10px;
}
.myTalk {
  width: 48px;
  height: 32px;
  background:#F4F4F4;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;/*设置对齐模式：垂直对齐*/
  -webkit-line-clamp: 2;/*设置多行的行数*/
}